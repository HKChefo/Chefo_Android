<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundcolor"
    tools:context="com.example.user.chefo.CustomerLogin">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/chefo"
        android:id="@+id/ChefoLogo2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username :"
        android:textSize="25dp"
        android:layout_marginTop="180dp"
        android:id="@+id/customernamel"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Type Here"
        android:textSize="25dp"
        android:layout_alignTop="@+id/customernamel"
        android:layout_alignEnd="@+id/ChefoLogo2"
        android:id="@+id/customername"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:textSize="25dp"
        android:layout_below="@+id/customernamel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/customerpwl"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Type Here"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/customerpwl"
        android:layout_alignParentEnd="true"
        android:id="@+id/customerpw"/>

</RelativeLayout>


