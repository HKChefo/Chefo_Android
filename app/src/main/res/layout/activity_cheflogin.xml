<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundcolor"
    tools:context="com.example.user.chefo.Cheflogin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/chefo"
        android:id="@+id/ChefoLogo3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chefusernameL"
        android:text="Username :"
        android:textSize="25dp"
        android:layout_marginTop="180dp"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/chefusername"
        android:textSize="25dp"
        android:background="#FFFFFF"
        android:text="Type Here"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_above="@+id/chefpwl"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Password :"
        android:id="@+id/chefpwl"
        android:layout_below="@+id/chefusernameL"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/chefpw"
        android:textSize="25dp"
        android:background="#FFFFFF"
        android:text="Type Here"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_above="@+id/chefloginb"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:text="Log In"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/chefpwl"
        android:layout_centerHorizontal="true"
        android:id="@+id/chefloginb"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:text="Sign Up"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/chefloginb"
        android:layout_centerHorizontal="true"
        android:id="@+id/chefsignupb"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/chefsignupb"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chef"/>
</RelativeLayout>
